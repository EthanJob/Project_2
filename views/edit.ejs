<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Post</title>
    <% include ./partials/head.ejs %>
  </head>
  <body>
    <header>
      <% include ./partials/header.ejs %>
    </header>
    <h2>Edit Post</h2>

    <form action="/home/meme/<%=meme.id%>?_method=PUT" method="post">
      <label for="author">Author: </label>
      <input type="text" name="posted_by" value="<%=meme.posted_by%>"><br>
      <label for="image">Image URL: </label>
      <input type="text" name="url" value="<%=meme.url%>">
      <button type="Submit">Update</button>
    </form>

    <hr>
    <h3>Current Image</h3>
    <img src="<%= meme.url %>" alt="meme image">

    <hr>
    <h2>Delete Comments</h2>
    <% for (let comment of comments) { %>
      <h3><%= comment.author %></h3>
      <p><%= comment.content %></p>
      <form action="/comments/<%=comment.id%>?_method=DELETE" method="post">
        <button>Delete</button>
      </form>
    <% } %>

    <hr>
    <form action="/home/meme/<%=meme.id%>?_method=DELETE" method="post">
      <button>Delete Post</button>
    </form>
  </body>
</html>
